{% extends 'common/layout.twig' %}

{# DATABASE BROWSER COMPONENT - DATABASE QUERY CONSOLE #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="sub-navigation border-b border-neutral-800 text-white breadcrumb bg-gradient-to-b from-zinc-900/40 to-zinc-950/40 backdrop-blur supports-[backdrop-filter]:bg-zinc-900/50">
    <a href={{ path('app_manager_database') }} class="border border-neutral-600 font-bold px-1 py-0 rounded mr-2 text-white" title="Back to database browser">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1 text-white">Query console</span>
</div>

{# DATABASE CONSOLE #}
<div class="p-1 shadow-md backdrop-blur-md bg-white/5 border border-white/20 rounded mb-2 database-console rounded">
    <h2 class="text-2xl text-center text-white font-semibold">Database console</h2>

    {# OUTPUT BOX #}
    {% if output is not null %}
        <div class="backdrop-blur-md bg-white/5 ml-2 mr-2 mt-1 border border-white/20 shadow-md animate-popin text-white">
            <p class="text-lg font-semibold border-b border-white/20 p-1">Database output</p>
            <pre id="query-output" class="text-sm whitespace-pre-wrap break-words p-2">{{ output|raw }}</pre>
        </div>
    {% endif %}

    {# QUERY FORM #}
    {% include "component/database-browser/form/query-form.twig" %}
</div><br>
{% endblock %}
