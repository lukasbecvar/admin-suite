{% extends 'common/layout.twig' %}

{# DATABASE BROWSER COMPONENT - DUMP DATABASE #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="bg-neutral-900 border-b border-neutral-700 sub-navigation breadcrumb p-4">
    {# BACK BUTTON #}
    <a href={{ path('app_manager_database') }} class="border border-gray-600 font-bold px-1 text-white">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>

    {# SUB-TITLE #}
    <span class="mr-1 text-white">Dump database</span>
</div>

{# DATABASE LIST #}
<div class="database-browser md:p-4">
    <div class="max-w-4xl mx-auto">
        <div class="overflow-x-auto">
            <table class="min-w-full bg-neutral-900 text-white border border-neutral-700 card-color">
                <thead>
                    <tr>
                        <th class="px-4 py-2 border-b border-neutral-700 text-left">Database</th>
                        <th class="px-4 py-2 border-b border-neutral-700 text-right">Structure</th>
                        <th class="px-4 py-2 border-b border-neutral-700 text-right">Data</th>
                    </tr>
                </thead>
                <tbody>
                    {% for database in databases %}
                        {# SHOW ONLY NON-SYSTEM DATABASES #}
                        {% if database.name != 'information_schema' and database.name != 'performance_schema' and database.name != 'sys' %}
                            <tr class="hover:bg-neutral-800">
                                <td class="px-4 py-2 border-b border-neutral-700 text-left">
                                    <a href={{ path('app_manager_database', {'database': database.name}) }} class="database-link">
                                        {{ database.name|e }}
                                    </a>
                                </td>
                                <td class="px-4 py-2 border-b border-neutral-700 text-right">
                                    <a href={{ path('app_manager_database_dump', {'select': 'no', 'database': database.name, 'plain': 'yes'}) }} class="database-link">
                                        Dump Structure
                                    </a>
                                </td>
                                <td class="px-4 py-2 border-b border-neutral-700 text-right">
                                <a href={{ path('app_manager_database_dump', {'select': 'no', 'database': database.name, 'plain': 'no'}) }} class="database-link">
                                        Dump Data
                                    </a>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
