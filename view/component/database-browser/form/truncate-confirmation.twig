{% extends 'common/layout.twig' %}

{# DATABASE BROWSER COMPONENT - TABLE TRUNCATE CONFIRMATION #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="bg-neutral-900 border-b border-neutral-700 sub-navigation breadcrumb p-4">
    <a href={{ path('app_manager_database_table_browser', {'database': databaseName, 'table': tableName}) }} class="border border-gray-600 font-bold px-1 text-white">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1 text-white">{{ tableName|e }}</span>
</div>

{# TABLE TRUNCATE CONFIRMATION #}
<div class="mt-8 mb-8 mx-auto max-w-lg p-4 bg-neutral-800 shadow-lg border border-gray-600">
    <h2 class="text-2xl text-white mb-4 text-center">Truncate table {{ tableName|e }}</h2>

    <div class="mt-6 text-center">
        {# SUBMIT BUTTON #}
        <a href={{ path('app_manager_database_truncate', {'database': databaseName, 'table': tableName, 'confirm': 'yes'}) }} class="mr-2 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 shadow">YES</a>

        {# CANCEL BUTTON #}
        <a href={{ path('app_manager_database_table_browser', {'database': databaseName, 'table': tableName}) }} class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 shadow">NO</a>
    </div>
</div>
{% endblock %}
