{% extends 'common/layout.twig' %}

{# DATABASE BROWSER COMPONENT - TABLE TRUNCATE CONFIRMATION #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="sub-navigation border-b border-neutral-800 text-white breadcrumb bg-gradient-to-b from-zinc-900/40 to-zinc-950/40 backdrop-blur supports-[backdrop-filter]:bg-zinc-900/50">
    <a href={{ path('app_manager_database_table_browser', {'database': databaseName, 'table': tableName}) }} class="border border-neutral-600 font-bold px-1 py-0 rounded mr-2 text-white" title="Back to database table browser">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1 text-white">{{ tableName|e }}</span>
</div>

{# TABLE TRUNCATE CONFIRMATION #}
<div class="mt-8 mb-8 mx-auto max-w-lg p-4 text-white shadow-lg backdrop-blur-md bg-white/5 border border-white/20 rounded phone-mt-disable table-truncate-confirmation-phone">
    <h2 class="text-2xl font-semibold mb-4 text-center">Clear {{ tableName|e }} table</h2>
    <p class="text-center mb-4">
        Are you you want to delete all data from the table: <strong>{{ tableName|e }}</strong>?
    </p>
    <div class="flex justify-center space-x-2">
        {# SUBMIT BUTTON #}
        <a href={{ path('app_manager_database_truncate', {'database': databaseName, 'table': tableName, 'confirm': 'yes'}) }} class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow">YES</a>

        {# CANCEL BUTTON #}
        <a href={{ path('app_manager_database_table_browser', {'database': databaseName, 'table': tableName}) }} class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded shadow">NO</a>
    </div>
</div>
{% endblock %}
