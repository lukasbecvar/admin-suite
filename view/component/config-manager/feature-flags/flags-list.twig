{% extends "common/layout.twig" %}

{# FEATURE FLAGS LIST #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="flex-shrink-0 px-2 py-1 border-b border-gray-700/50 bg-gray-800/30">
    <div class="flex items-center justify-between gap-2">
        <div class="flex items-center gap-3">
            <a href={{ path('app_dashboard') }} title="Back to dashboard" class="w-8 h-8 bg-gray-700/50 hover:bg-gray-600/50 rounded flex items-center justify-center transition-all duration-200 border border-gray-600/30">
                <i class="fas fa-arrow-left text-gray-300 text-xs"></i>
            </a>
            <div class="hidden sm:block">
                <h1 class="text-xm font-bold text-white">Feature Flags</h1>
                <p class="text-gray-400 text-xs">Manage feature flags</p>
            </div>
        </div>
    </div>
</div>

{# FLAGS LIST TABLE #}
<div class="mb-5">
    {% if isConfigCustom == false %}
        {# NO CUSTOM CONFIG INFO CARD #}
        <div class="bg-gray-800/50 sm:border border-gray-700/50 sm:rounded sm:m-4 shadow-xl text-white text-center">
            <div class="p-4">
                <div class="text-gray-400 text-sm sm:text-xl">
                    <p>You can edit feature flags only if you have a custom internal configuration file.</p>
                    <p>
                        To make custom configuration file click here:
                        <form method="POST" action={{ path('app_suite_config_create') }} style="display:inline">
                            <input type="hidden" name="referer" value="app_feature_flags">
                            <input type="hidden" name="filename" value="feature-flags.json">
                            <input type="hidden" name="csrf_token" value={{ csrf_token('internal-csrf-token') }}>
                            <button type="submit" class="text-blue-400 hover:underline bg-transparent border-0 p-0 cursor-pointer">
                                Create custom config file
                            </button>
                        </form>
                    </p>
                </div>
            </div>
        </div>
    {% else %}
        <div class="bg-gray-800/50 sm:border border-gray-700/50 sm:rounded sm:m-4 shadow-xl text-white">
            <table class="w-full text-sm text-left text-gray-300">
                <thead class="border-b border-gray-700/50 bg-gray-800/40 text-gray-400 uppercase text-xs">
                    <tr>
                        <th scope="col" class="px-4 py-3">Flag</th>
                        <th scope="col" class="px-4 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700/40">
                    {% for key, flag in featureFlagsConfig %}
                        <tr class="hover:bg-gray-700/20 transition-all duration-200">
                            <td class="px-4 py-4 font-medium text-white text-base">{{ key|replace({'-': ' '}) }}</td>
                            {# FLAG ENABLE/DISABLE BUTTONS #}
                            <td class="px-4 py-4 text-right">
                                <form method="POST" action={{ path('app_feature_flags_update') }} style="display:inline">

                                    {# REQUEST PARAMETERS #}
                                    <input type="hidden" name="feature" value={{ key }}>
                                    <input type="hidden" name="value" value={{ flag ? 'disable' : 'enable' }}>

                                    {# CSRF SECURITY TOKEN #}
                                    <input type="hidden" name="csrf_token" value={{ csrf_token('internal-csrf-token') }}>

                                    {# SUBMIT BUTTON #}
                                    <button type="submit" class="inline-flex items-center justify-center gap-2 px-4 py-2 text-xs font-semibold rounded-md border transition-all duration-200 mr-[-5px] {{ flag ? 'bg-red-500/20 hover:bg-red-500/30 border-red-500/40 hover:border-red-500/60 text-red-200 hover:text-red-100' : 'bg-green-500/20 hover:bg-green-500/30 border-green-500/40 hover:border-green-500/60 text-green-200 hover:text-green-100' }}">
                                        {{ flag ? 'Disable' : 'Enable' }}
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="px-4 py-4 text-center text-gray-500">No feature flags found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
