{% extends "common/layout.twig" %}

{# FEATURE FLAGS LIST #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="flex-shrink-0 px-2 py-1 border-b border-gray-700/50 bg-gray-800/30">
    <div class="flex items-center justify-between gap-2">
        <div class="flex items-center gap-3">
            <a href={{ path('app_dashboard') }} class="w-8 h-8 bg-gray-700/50 hover:bg-gray-600/50 rounded flex items-center justify-center transition-all duration-200 border border-gray-600/30" title="Back to dashboard">
                <i class="fas fa-arrow-left text-gray-300 text-xs"></i>
            </a>
            <div class="hidden sm:block">
                <h1 class="text-xm font-bold text-white">Feature Flags</h1>
                <p class="text-gray-400 text-xs">Manage feature flags</p>
            </div>
        </div>
    </div>
</div>

{# FLAGS LIST TABLE #}
<div class="mb-5">
    {% if isConfigCustom == false %}
        {# NO CUSTOM CONFIG INFO CARD #}
        <div class="bg-gray-800/50 sm:border border-gray-700/50 sm:rounded sm:m-4 shadow-xl text-white text-center">
            <div class="p-4">
                <div class="text-gray-400 text-sm sm:text-xl">
                    <p>You can edit feature flags only if you have a custom suite configuration file.</p>
                    <p>To make custom configuration file click here: <a href={{ path('app_suite_config_create', {'referer': 'app_feature_flags', 'filename': 'feature-flags.json'}) }} class="text-blue-400 hover:underline">Create custom config file</a></p>
                </div>
            </div>
        </div>
    {% else %}
        <div class="bg-gray-800/50 sm:border border-gray-700/50 sm:rounded sm:m-4 shadow-xl text-white">
            <table class="w-full text-sm text-left text-gray-300">
                <thead class="border-b border-gray-700/50 bg-gray-800/40 text-gray-400 uppercase text-xs">
                    <tr>
                        <th scope="col" class="px-4 py-3">Flag</th>
                        <th scope="col" class="px-4 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700/40">
                    {% for key, flag in featureFlagsConfig %}
                        <tr class="hover:bg-gray-700/20 transition-all duration-200">
                            <td class="px-4 py-4 font-medium text-white text-base">{{ key|replace({'-': ' '}) }}</td>
                            <td class="px-4 py-4 text-right">
                                {% if flag %}
                                    <a href={{ path('app_feature_flags_update', {'feature': key, 'value': 'disable'}) }} class="px-4 py-2 text-xs font-medium rounded bg-red-600/80 hover:bg-red-500/90 text-white transition-all duration-200 shadow-sm border border-red-500/50 mr-[-5px]">Disable</a>
                                {% else %}
                                    <a href={{ path('app_feature_flags_update', {'feature': key, 'value': 'enable'}) }} class="px-4 py-2 text-xs font-medium rounded bg-green-600/80 hover:bg-green-500/90 text-white transition-all duration-200 shadow-sm border border-green-500/50 mr-[-5px]">Enable</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="px-4 py-4 text-center text-gray-500">No feature flags found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
