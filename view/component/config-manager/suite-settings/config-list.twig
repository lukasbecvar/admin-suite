{% extends 'common/layout.twig' %}

{# LIST SUITE CONFIGURATION FILES COMPONENT #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="flex-shrink-0 px-2 py-1 border-b border-gray-700/50 bg-gray-800/30">
	<div class="flex items-center justify-between gap-2">
		<div class="flex items-center gap-3">
			<a href={{ path('app_settings') }} class="w-8 h-8 bg-gray-700/50 hover:bg-gray-600/50 rounded flex items-center justify-center transition-all duration-200 border border-gray-600/30" title="Back to settings">
				<i class="fas fa-arrow-left text-gray-300 text-xs"></i>
			</a>
			<div class="hidden sm:block">
				<h1 class="text-xm font-bold text-white">Suite Configuration</h1>
				<p class="text-gray-400 text-xs">Manage suite-wide configuration files</p>
			</div>
		</div>
	</div>
</div>

{# SUITE CONFIGURATION LIST TABLE #}
<div class="sm:p-4">
    <div class="bg-gray-800/90 sm:rounded shadow-lg">
        <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-900/50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Filename</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
                    <th scope="col" class="relative px-6 py-3"><span class="sr-only">View</span></th>
                </tr>
            </thead>
            {# CONFIG ITEMS LIST #}
            <tbody class="bg-gray-800 divide-y divide-gray-700">
                {% for config in configs %}
                    <tr>
                        <td class="px-6 py-4 text-sm font-medium text-white">{{ config.filename }}</td>
                        <td class="px-6 py-4 text-sm">
                            {% if config.is_custom %}
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-600 text-green-100">Custom</span>
                            {% else %}
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-600 text-gray-100">Default</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href={{ path('app_suite_config_show', {'filename': config.filename}) }} class="text-indigo-400 hover:text-indigo-300 text-m font-semibold">View</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
