{% extends 'common/layout.twig' %}

{# DELETE METRIC CONFIRMATION #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="bg-neutral-900 border-b border-neutral-700 sub-navigation breadcrumb">
    <a href={{ path('app_metrics_service', {'service_name': serviceName}) }} class="border border-neutral-700 font-bold px-1 py-0 rounded mr-2 text-white" title="Back to dashboard">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
</div>

{# CONFIRMATION DIALOG #}
<div class="mt-8 mb-8 mx-auto max-w-lg p-4 card-color text-white shadow-lg border border-neutral-700 rounded phone-mt-disable table-truncate-confirmation-phone">
    <h2 class="text-2xl font-semibold mb-4 text-center">Metric delete confirmation</h2>
    <p class="text-center mb-4">
        Do you want delete <strong>{{ metricName|e }}</strong> - <strong>{{ serviceName|e }}</strong>?
    </p>
    <div class="flex justify-center space-x-2">
        {# SUBMIT BUTTON #}
        <a href={{ path('app_metrics_delete', {'metric_name': metricName, 'service_name': serviceName, 'confirm': 'yes'}) }} class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow">YES</a>

        {# CANCEL BUTTON #}
        <a href={{ path('app_metrics_delete', {'metric_name': metricName, 'service_name': serviceName, 'confirm': 'no'}) }} class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded shadow">NO</a>
    </div>
</div>
{% endblock %}
