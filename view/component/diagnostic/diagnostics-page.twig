{% extends 'common/layout.twig' %}

{# DIAGNOSTICS PAGE #}
{% block component %} 
{# SUB-NAVIGATION #}
<div class="sub-navigation border-b border-neutral-800 text-white breadcrumb bg-gradient-to-b from-zinc-900/40 to-zinc-950/40 backdrop-blur supports-[backdrop-filter]:bg-zinc-900/50">
    <a href={{ path('app_dashboard') }} class="border border-neutral-600 font-bold px-1 py-0 rounded mr-2 text-white hover:bg-neutral-700" title="Back to dashboard">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <a href={{ path('app_system_audit') }} class="border border-neutral-600 font-bold px-1 py-0 rounded mr-2 ml-1 text-white hover:bg-neutral-700" title="Back to dashboard">
        <i class="fa fa-columns" aria-hidden="true"></i>
    </a>
    <span class="mr-1 text-white">Diagnostics</span>
</div>

{# DIAGNOSTICS CARDS #}
<div class="flex-center component p-2">
    {# HOST SYSTEM DIAGNOSTICS CARD #}
    <div class="mb-2">{% include "component/diagnostic/card/system-diagnostics.twig" %}</div>

    {# SELF SUITE DIAGNOSTICS CARD #}
    {% include "component/diagnostic/card/self-suite-diagnostics.twig" %}

    {# SERVICES DIAGNOSTICS CARD #}
    <div class="mt-2">{% include "component/diagnostic/card/services-diagnostics.twig" %}</div>
</div>
{% endblock %}
