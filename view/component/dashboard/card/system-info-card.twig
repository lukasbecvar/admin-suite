<div class="backdrop-blur-md bg-gray-800/50 border border-gray-700/50 rounded shadow-xl text-white w-full overflow-hidden hover:bg-gray-800/60 transition-all duration-300 h-full flex flex-col">
    <div class="px-2 py-2 border-b border-gray-700/50 font-semibold tracking-wide text-sm uppercase text-gray-200 flex items-center gap-2">
        <div class="w-8 h-8 bg-teal-500/20 rounded-lg flex items-center justify-center">
            <i class="fas fa-desktop text-teal-400 text-sm"></i>
        </div>
        <span>System Information</span>
    </div>
    <div class="p-2 flex-1 flex flex-col space-y-3">
        {# SYSTEM & KERNEL INFO #}
        <div class="bg-gray-700/30 rounded-lg p-3 border border-gray-600/30">
            <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-2">
                    <i class="fas fa-server text-green-400 text-sm"></i>
                    <span class="text-white font-medium text-sm">System Info</span>
                </div>
                <span class="text-white font-semibold text-sm">
                    {{ hostSystemInfo.operating_system|split('"')[1]|trim('" NAME')|e }}
                </span>
            </div>
            <div class="space-y-2 text-xs text-gray-400">
                <div class="flex justify-between items-center">
                    <span>Uptime: <span class="text-white font-semibold" id="system-uptime">{{ hostUptime|e }}</span></span>
                    <span class="text-right">Kernel: <span class="text-white font-semibold">{{ hostSystemInfo.kernel_version|e }}</span></span>
                </div>
                <div>Architecture: <span class="text-white font-semibold">{{ hostSystemInfo.kernel_arch|e }}</span></div>
            </div>
        </div>

        {# INSTALLATION TIME #}
        <div class="bg-gray-700/30 rounded-lg p-3 border border-gray-600/30">
            <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-2">
                    <i class="fas fa-calendar-alt text-red-400 text-sm"></i>
                    <span class="text-white font-medium text-sm">Installation Time</span>
                </div>
            </div>
            <div class="text-white font-semibold text-sm">{{ systemInstallInfo|e }}</div>
        </div>
    </div>
</div>
