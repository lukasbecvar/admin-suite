<div class="backdrop-blur-md bg-neutral-400/5 border border-white/15 rounded shadow-xl text-white w-full overflow-hidden">
    <div class="px-3 py-2 border-b border-white/10 font-semibold tracking-wide text-sm uppercase text-white/80 flex items-center gap-2">
        <i class="fas fa-database text-white/70"></i>
        Database statistics
    </div>
    <div class="divide-y divide-white/10 space-y-0">
        {# SECTION: LOGS #}
        <div class="space-y-0">
            <div class="flex items-center justify-between border-b border-white/10">
                <div class="flex items-center gap-2 text-sm text-white/70 font-semibold p-2">
                    <i class="fas fa-scroll text-white/50"></i>
                    Logs
                </div>
                <a href={{ path('app_manager_logs') }} class="text-indigo-400 hover:text-indigo-300 text-xs pr-2 font-semibold" title="Go to logs">View All</a>
            </div>

            <div class="grid grid-cols-2 gap-x-4 col-span-2 p-2 pb-1">
                <div>
                    <p class="text-gray-300 mb-1">
                        Logs count: <span class="text-white font-semibold">{{ allLogsCount|e }}</span>
                    </p>
                </div>
                <div>
                    <p class="text-gray-300 mb-1">
                        Auth logs: <span class="text-white font-semibold">{{ authLogsCount|e }}</span>
                    </p>
                </div>
                <div>
                    <p class="text-gray-300 mb-1">
                        Readed: <span class="text-white font-semibold">{{ readedLogsCount|e }}</span>
                    </p>
                </div>
                <div>
                    <p class="text-gray-300 mb-1">
                        Unreaded: <span class="text-white font-semibold">{{ unreadedLogsCount|e }}</span>
                    </p>
                </div>
            </div>
        </div>
        {# SECTION: USERS #}
        <div class="space-y-2">
            <div class="flex items-center justify-between border-b border-white/10">
                <div class="flex items-center gap-2 text-sm text-white/70 font-semibold p-2">
                    <i class="fas fa-users text-white/50"></i>
                    Users
                </div>
                <a href={{ path('app_manager_users') }} class="text-indigo-400 hover:text-indigo-300 text-xs pr-2 font-semibold" title="Go to users manager">View All</a>
            </div>
            <div class="grid grid-cols-2 gap-x-4 col-span-2 p-2 pb-1">
                <div>
                    <p class="text-gray-300 mb-1">
                        Users count: <span class="text-white font-semibold">{{ usersCount|e }}</span>
                    </p>
                </div>
                <div>
                    <p class="text-gray-300 mb-1">
                        Online: <span class="text-white font-semibold">
                            {{ onlineUsersCount|e }} (<a href="{{ path('app_manager_users', {'filter': 'online'}) }}" class="text-blue-400 hover:text-blue-300">list</a>)
                        </span>
                    </p>
                </div>
                <div class="col-span-2">
                    <p class="text-gray-300 mb-1">
                        Banned: <span class="text-white font-semibold">
                            {{ bannedUsersCount|e }} (<a href="{{ path('app_manager_users', {'filter': 'banned'}) }}" class="text-blue-400 hover:text-blue-300">list</a>)
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
