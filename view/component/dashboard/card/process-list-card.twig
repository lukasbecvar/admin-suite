<div class="backdrop-blur-md bg-gray-800/50 border border-gray-700/50 rounded shadow-xl text-white w-full overflow-hidden hover:bg-gray-800/60 transition-all duration-300">
    <div class="px-2 py-2 border-b border-gray-700/50 font-semibold tracking-wide text-sm uppercase text-gray-200 flex items-center gap-2">
        <div class="w-8 h-8 bg-yellow-500/20 rounded-lg flex items-center justify-center">
            <i class="fas fa-tasks text-yellow-400 text-sm"></i>
        </div>
        <span>Process List</span>
    </div>
    <div class="overflow-auto max-h-[285px] custom-scrollbar border-b border-gray-700/50">
        <table class="min-w-full divide-y divide-gray-700/50 text-white text-sm">
            <thead class="bg-gray-700/30">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-bold uppercase tracking-wider sticky top-0 bg-gray-700 z-10">
                        PID
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-bold uppercase tracking-wider sticky top-0 bg-gray-700 z-10">
                        User
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-bold uppercase tracking-wider sticky top-0 bg-gray-700 z-10">
                        Process
                    </th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700/30">
                {% for process in processList %}
                    <tr class="hover:bg-gray-700/30 transition-colors duration-150">
                        <td class="px-4 py-3 whitespace-nowrap font-semibold">{{ process.pid|e }}</td>
                        <td class="px-4 py-3 whitespace-nowrap">{{ process.user|e }}</td>
                        <td class="px-4 py-3 whitespace-nowrap">{{ process.process|e }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
