<div class="backdrop-blur-md bg-neutral-400/5 border border-white/15 rounded shadow-xl text-white w-full overflow-hidden">
    <div class="px-3 py-2 border-b border-white/10 font-semibold tracking-wide text-sm uppercase text-white/80 flex items-center justify-between">
        <span><i class="fas fa-tasks text-white/70 mr-2"></i> Process list</span>
    </div>
    <div class="overflow-auto max-h-[285px] custom-scrollbar border-b border-white/10">
        <table class="min-w-full divide-y divide-white/10 text-white text-sm">
            <thead class="bg-white/10">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-bold uppercase tracking-wider sticky top-0 bg-neutral-800 z-10">
                        PID
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-bold uppercase tracking-wider sticky top-0 bg-neutral-800 z-10">
                        User
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-bold uppercase tracking-wider sticky top-0 bg-neutral-800 z-10">
                        Process
                    </th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/10">
                {% for process in processList %}
                    <tr class="hover:bg-white/10 transition-colors duration-150">
                        <td class="px-4 py-3 whitespace-nowrap font-semibold">{{ process.pid|e }}</td>
                        <td class="px-4 py-3 whitespace-nowrap">{{ process.user|e }}</td>
                        <td class="px-4 py-3 whitespace-nowrap">{{ process.process|e }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
