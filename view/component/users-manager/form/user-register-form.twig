{% extends 'common/layout.twig' %}

{# ADMIN ACCOUNTS REGISTER COMPONENT (ADMIN USER MANAGER) #}
{% block component %}
<div class="flex flex-col h-full">
{# SUB-NAVIGATION #}
<div class="flex-shrink-0 px-2 py-1 border-b border-gray-700/50 bg-gray-800/30">
    <div class="flex items-center justify-between gap-2">
        <div class="flex items-center gap-3">
            <a href={{ path('app_manager_users') }} class="w-8 h-8 bg-gray-700/50 hover:bg-gray-600/50 rounded-lg flex items-center justify-center transition-all duration-200 border border-gray-600/30" title="Back to users manager">
                <i class="fas fa-arrow-left text-gray-300 text-xs"></i>
            </a>
            <div class="hidden sm:block">
                <h1 class="text-lg font-bold text-white">Register User</h1>
                <p class="text-gray-400 text-xs">Create a new system user account</p>
            </div>
        </div>
    </div>
</div>

{# REGISTER FORM #}
<div class="flex justify-center items-center mt-20 mb-10">
    <div class="text-white max-w-md w-full px-8 py-8 mb-4 shadow-2xl backdrop-blur-lg bg-gray-800/80 border border-gray-600/50 m-w-95 rounded-2xl">
        <h2 class="text-3xl mb-8 text-center text-white font-bold tracking-wide">Register</h2>

        {# SUCCESS MESSAGE RETURN BOX #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-600/20 border border-green-500/50 text-green-200 p-4 mb-6 rounded-lg text-center animate-popin">{{ message|e }}</div>
        {% endfor %}

        {# ERROR MESSAGE RETURN BOX #}
        {% for message in app.flashes('error') %}
            <div class="bg-red-600/20 border border-red-500/50 text-red-200 p-4 mb-6 rounded-lg text-center animate-popin">{{ message|e }}</div>
        {% endfor %}
    
        {# REGISTER FORM #}
        {{ form_start(registrationForm) }}
    
            {# FORM FIELDS #}
            <div class="space-y-0">
                {{ form_row(registrationForm.username, {'attr': {'class': 'form-input rounded w-full mb-1 p-2 bg-white/10 border border-neutral-800 text-white placeholder-gray-400', 'placeholder': 'Username'}}) }}
                {{ form_row(registrationForm.password.first, {'attr': {'class': 'form-input rounded w-full mb-1 p-2 bg-neutral-700 border border-neutral-800 text-white placeholder-gray-400', 'placeholder': 'Password'}}) }}
                {{ form_row(registrationForm.password.second, {'attr': {'class': 'form-input rounded w-full p-2 bg-neutral-700 border border-neutral-800 text-white placeholder-gray-400', 'placeholder': 'Confirm Password'}}) }}
            </div>
    
            {# FORM SUBMIT BUTTON #}
            <button type="submit" class="mt-2 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 w-full focus:outline-none focus:shadow-outline transition duration-200 rounded hover:shadow-lg hover:shadow-blue-900">Register</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
