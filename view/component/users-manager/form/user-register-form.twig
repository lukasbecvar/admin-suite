{% extends 'common/layout.twig' %}

{# ADMIN ACCOUNTS REGISTER COMPONENT (ADMIN USER MANAGER) #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="sub-navigation border-b border-neutral-800 text-white breadcrumb bg-gradient-to-b from-zinc-900/40 to-zinc-950/40 backdrop-blur supports-[backdrop-filter]:bg-zinc-900/50">
    <a href={{ path('app_manager_users') }} class="border border-neutral-600 font-bold px-1 py-0 rounded mr-2 text-white" title="Back to users manager">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1 text-white">Register user</span>
</div>

{# REGISTER FORM #}
<div class="flex justify-center items-center mt-20 mb-10">
    <div class="text-white max-w-md w-full px-2 py-2 mb-1 shadow-lg backdrop-blur-md bg-white/10 border border-white/20 m-w-95 rounded">
        <h2 class="text-2xl mb-4 text-center text-white font-semibold">Register</h2>
    
        {# SUCCESS MESSAGE RETURN BOX #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-700 text-white p-3 mb-4 rounded text-center animate-popin">{{ message|e }}</div>
        {% endfor %}
    
        {# ERROR MESSAGE RETURN BOX #}
        {% for message in app.flashes('error') %}
            <div class="bg-red-700 text-white p-3 mb-4 rounded text-center animate-popin">{{ message|e }}</div>
        {% endfor %}
    
        {# REGISTER FORM #}
        {{ form_start(registrationForm) }}
    
            {# FORM FIELDS #}
            <div class="space-y-0">
                {{ form_row(registrationForm.username, {'attr': {'class': 'form-input rounded w-full mb-1 p-2 bg-white/10 border border-neutral-800 text-white placeholder-gray-400', 'placeholder': 'Username'}}) }}
                {{ form_row(registrationForm.password.first, {'attr': {'class': 'form-input rounded w-full mb-1 p-2 bg-neutral-700 border border-neutral-800 text-white placeholder-gray-400', 'placeholder': 'Password'}}) }}
                {{ form_row(registrationForm.password.second, {'attr': {'class': 'form-input rounded w-full p-2 bg-neutral-700 border border-neutral-800 text-white placeholder-gray-400', 'placeholder': 'Confirm Password'}}) }}
            </div>
    
            {# FORM SUBMIT BUTTON #}
            <button type="submit" class="mt-2 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 w-full focus:outline-none focus:shadow-outline transition duration-200 rounded hover:shadow-lg hover:shadow-blue-900">Register</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
