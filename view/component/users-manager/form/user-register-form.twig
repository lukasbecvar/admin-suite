{% extends 'common/layout.twig' %}

{# ADMIN ACCOUNTS REGISTER COMPONENT (ADMIN USER MANAGER) #}
{% block component %}
{# SUB NAVIGATION #}
<div class="bg-neutral-900 border-b border-neutral-700 sub-navigation breadcrumb">
    <a href={{ path('app_manager_users') }} class="border border-gray-600 font-bold px-1 text-white">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1 text-white">Register user</span>
</div>

{# REGISTER FORM #}
<div class="flex justify-center items-center mt-10 mb-10">
    <div class="text-white max-w-md w-full card-color shadow-md px-4 py-4 mb-1 border border-gray-600 m-w-95">
        <h2 class="text-2xl mb-6 text-center text-white font-semibold">Register</h2>
    
        {# SUCCESS MESSAGE RETURN BOX #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-700 text-white p-3 mb-4 rounded text-center">{{ message|e }}</div>
        {% endfor %}
    
        {# ERROR MESSAGE RETURN BOX #}
        {% for message in app.flashes('error') %}
            <div class="bg-red-700 text-white p-3 mb-4 rounded text-center">{{ message|e }}</div>
        {% endfor %}
    
        {# REGISTER FORM #}
        {{ form_start(registrationForm) }}
    
            {# FORM FIELDS #}
            <div class="space-y-4">
                {{ form_row(registrationForm.username, {'attr': {'class': 'auth-form-input w-full p-2 rounded bg-neutral-700 border border-neutral-600 text-white placeholder-gray-400', 'placeholder': 'Username'}}) }}
                {{ form_row(registrationForm.password.first, {'attr': {'class': 'auth-form-input w-full p-2 rounded bg-neutral-700 border border-neutral-600 text-white placeholder-gray-400', 'placeholder': 'Password'}}) }}
                {{ form_row(registrationForm.password.second, {'attr': {'class': 'auth-form-input w-full p-2 rounded bg-neutral-700 border border-neutral-600 text-white placeholder-gray-400', 'placeholder': 'Confirm Password'}}) }}
            </div>
    
            {# FORM SUBMIT BUTTON #}
            <button type="submit" class="mt-6 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full focus:outline-none focus:shadow-outline transition duration-200">Register</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
