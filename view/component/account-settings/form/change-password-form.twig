{% extends 'common/layout.twig' %}

{# ACCOUNT SETTING CHANGE PASSWORD #}
{% block component %}
{# SUB NAVIGATION #}
<div class="sub-navigation border-b border-neutral-800 text-white breadcrumb bg-gradient-to-b from-zinc-900/40 to-zinc-950/40 backdrop-blur supports-[backdrop-filter]:bg-zinc-900/50">
    <a href={{ path('app_account_settings_table') }} class="border border-neutral-600 font-bold px-1 py-0 rounded mr-2 text-white" title="Back to account settings">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1">Password settings</span>
</div>

{# CHANGE PASSWORD FORM #}
<div class="flex justify-center items-center my-10 component">
    <div class="text-white max-w-md w-full shadow-md px-3 py-1 bg-neutral-300/5 border border-white/15 rounded m-w-95">
        <h2 class="text-xl mt-2 mb-2 text-center text-white/80">Change Password</h2>
    
        {# SUCCESS MESSAGE BOX #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-700 text-white p-3 mb-3 rounded text-center animate-popin">{{ message|e }}</div>
        {% endfor %}
    
        {# ERROR MESSAGE BOX #}
        {% for message in app.flashes('error') %}
            <div class="bg-red-700 text-white p-3 mb-3 rounded text-center animate-popin">{{ message|e }}</div>
        {% endfor %}
    
        {# CHANGE PASSWORD FORM #}
        {{ form_start(passwordChangeForm) }}
    
            {# FORM FIELDS #}
            {{ form_row(passwordChangeForm.password.first, {'attr': {'class': 'auth-form-input', 'placeholder': 'Password'}}) }}
            {{ form_row(passwordChangeForm.password.second, {'attr': {'class': 'auth-form-input', 'placeholder': 'Confirm Password'}}) }}
    
            {# FORM SUBMIT BUTTON #}
            <button type="submit" class="mt-1 mb-2 bg-blue-600 hover:bg-blue-500 text-white font-semibold py-2 px-4 rounded-md w-full transition duration-300 ease-in-out hover:shadow-lg hover:shadow-blue-900">
                Change
            </button>
        {{ form_end(passwordChangeForm) }}
    </div>
</div>
{% endblock %}
