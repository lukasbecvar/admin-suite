{% extends 'common/layout.twig' %}

{# SYSTEM LOGS VIEW #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="sub-navigation border-b border-neutral-800 text-white breadcrumb bg-gradient-to-b from-zinc-900/40 to-zinc-950/40 backdrop-blur supports-[backdrop-filter]:bg-zinc-900/50">
    <a href={{ path('app_manager_logs') }} class="border border-neutral-600 font-bold px-1 py-0 rounded mr-2 text-white hover:bg-neutral-700" title="Back to log manager">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1 text-white">System logs</span>
</div>

{# LOG SELECT BOX #}
<div class="text-white p-6">
    <h3 class="text-2xl font-semibold text-white mb-4">Log Files</h3>
    <ul class="space-y-2">
        {% for logFile in logFiles %}
            <li>
                <a href={{ path('app_file_system_view', { path: logFile.path, referer: 'log_manager_server_logs' }) }} class="block p-3 bg-neutral-800 hover:bg-blue-700 break-words">{{ logFile.name }}</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
