{% extends 'common/layout.twig' %}

{# SYSTEM LOGS VIEW #}
{% block component %}
<div class="bg-neutral-900">
    {# SUB-NAVIGATION #}
    <div class="bg-neutral-900 border-b border-neutral-700 sub-navigation breadcrumb">
        <a href={{ path('app_manager_logs') }} class="border border-gray-600 font-bold px-1 py-0 rounded mr-2 text-white" title="Back to system logs">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
        </a>

        <span class="mr-1 text-white">System logs</span>
    </div>

    {# LOG SELECT BOX #}
    <div class="bg-neutral-900 text-white p-6">
        <h3 class="text-2xl font-semibold text-white mb-4">Log Files</h3>
        <ul class="space-y-2">
            {% for logFile in logFiles %}
                <li>
                    <a href={{ path('app_file_system_view', { path: logFile.path, referer: 'log_manager_server_logs' }) }} class="block p-3 bg-neutral-800 hover:bg-blue-600 break-words">{{ logFile.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
