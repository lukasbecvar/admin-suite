{% extends 'common/layout.twig' %}

{# FILE SYSTEM BROWSER COMPONENT - CREATE DIRECTORY #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="sub-navigation border-b border-neutral-800 text-white breadcrumb bg-gradient-to-b from-zinc-900/40 to-zinc-950/40">
    {# BACK BUTTON #}
    <a href={{ path('app_file_system_browser', { 'path': currentPath }) }} class="border border-neutral-600 font-bold px-1 py-0 rounded mr-2 text-white hover:bg-neutral-700" title="Back to directory">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1 text-white">Create New Directory</span>
</div>

{# FILESYSTEM BROWSER - FULL WIDTH #}
<div class="component bg-gradient-to-b from-zinc-900/40 to-zinc-950/40 flex flex-col h-[calc(100vh-48px)]">
    {# FILESYSTEM PATH BREADCRUMB #}
    <div class="p-1 border-b border-neutral-800 shadow flex items-center space-x-2 bg-gradient-to-b from-zinc-900/40 to-zinc-950/40">
        <span class="text-sm font-medium text-gray-300">Directory:</span>
        <span class="text-sm text-gray-100">
            {% set parts = currentPath|split('/') %}
            <a href={{ path('app_file_system_browser', { 'path': '/' }) }} class="text-blue-500 hover:underline">/base</a>
            {% set accumulatedPath = '' %}
            {% for part in parts %}
                {% if part is not empty %}
                    {% set accumulatedPath = accumulatedPath ~ '/' ~ part %}
                    <span>/</span>
                    <a href={{ path('app_file_system_browser', { 'path': accumulatedPath }) }} class="text-blue-500 hover:underline">{{ part }}</a>
                {% endif %}
            {% endfor %}
        </span>
    </div>

    {# FLASH MESSAGES #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="m-2 p-2 rounded-md {% if label == 'success' %}bg-green-600/20 text-green-400 border border-green-800{% else %}bg-red-600/20 text-red-400 border border-red-800{% endif %}">
                {{ message|e }}
            </div>
        {% endfor %}
    {% endfor %}

    {# CREATE DIRECTORY FORM #}
    <form action={{ path('app_file_system_create_directory_save') }} method="post" class="flex flex-col flex-grow">
        <input type="hidden" name="directory" value={{ currentPath }}>

        {# SIMPLE DIRECTORY CREATION FORM #}
        <div class="flex-grow flex items-center justify-center">
            <div class="bg-gradient-to-b from-zinc-800/60 to-zinc-900/60 border border-neutral-700 rounded-lg p-6 w-full max-w-md shadow-lg">
                <div class="mb-4 text-center">
                    <i class="fa fa-folder-open text-yellow-500 text-4xl mb-2"></i>
                    <h3 class="text-lg font-medium text-gray-200">Create New Folder</h3>
                </div>

                <div class="mb-6">
                    <label for="directoryname" class="block text-sm font-medium text-gray-300 mb-2">Folder Name:</label>
                    <input
                        type="text"
                        id="directoryname"
                        name="directoryname"
                        class="w-full bg-gray-900 text-white font-mono p-2 border border-gray-700 rounded focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none"
                        placeholder="Enter folder name"
                        required
                        autofocus
                    >
                    <p class="text-gray-500 text-xs mt-1">Folder will be created at: <span class="text-gray-400">{{ currentPath }}</span></p>
                    <p class="text-gray-500 text-xs mt-1">Name cannot contain path separators (/)</p>
                </div>

                <div class="flex justify-between">
                    <a href={{ path('app_file_system_browser', { 'path': currentPath }) }} class="flex items-center gap-1 bg-gray-800 hover:bg-gray-700 text-white font-medium rounded px-3 py-2 text-sm transition-all duration-150">
                        <i class="fa fa-arrow-left"></i>
                        Cancel
                    </a>
                    <button type="submit" class="flex items-center gap-1 bg-blue-700 hover:bg-blue-600 text-white font-medium rounded px-3 py-2 text-sm transition-all duration-150">
                        <i class="fa fa-check"></i>
                        Create Folder
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

{# FILESYSTEM CREATE DIRECTORY FUNCTIONS #}
{{ encore_entry_script_tags('file-system-create-directory-js') }}
{% endblock %}
