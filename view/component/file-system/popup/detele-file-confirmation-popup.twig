<div id="delete-file-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="backdrop-blur-md bg-white/5 rounded p-6 border border-neutral-800 animate-popin">
        <h3 class="text-xl font-semibold text-white mb-4">Confirm Delete</h3>
        <p id="delete-confirmation-text" class="text-gray-300 mb-6">Are you sure you want to delete this item? This action cannot be undone.</p>
        <div class="flex justify-end space-x-4">
            <button id="cancel-delete" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                Cancel
            </button>
            <form id="delete-file-form" action={{ path('app_file_system_delete') }} method="post">
                <input type="hidden" id="delete-file-path" name="path" value="">
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>
