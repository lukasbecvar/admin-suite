{% extends 'common/layout.twig' %}

{# FILE SYSTEM ERROR PAGE #}
{% block component %}
{# SUB-NAVIGATION #}
<div class="sub-navigation border-b border-neutral-800 text-white breadcrumb bg-gradient-to-b from-zinc-900/40 to-zinc-950/40">
    {# BACK BUTTON #}
    <a href={{ path('app_file_system_browser', { 'path': returnPath }) }} class="border border-neutral-600 font-bold px-1 py-0 rounded mr-2 text-white hover:bg-neutral-700" title="Back to directory">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1 text-white">File System Error</span>
</div>

{# ERROR CONTENT #}
<div class="component bg-gradient-to-b from-zinc-900/40 to-zinc-950/40 flex flex-col h-[calc(100vh-48px)]">
    <div class="flex-grow flex items-center justify-center">
        <div class="bg-gradient-to-b from-zinc-800/60 to-zinc-900/60 border border-neutral-700 rounded-lg p-8 w-full max-w-lg shadow-lg">
            <div class="mb-6 text-center">
                <i class="fa fa-exclamation-triangle text-red-500 text-5xl mb-4"></i>
                <h2 class="text-xl font-bold text-white mb-2">{{ errorTitle }}</h2>
                <p class="text-gray-300">{{ errorMessage }}</p>
                
                {% if details %}
                <div class="mt-4 p-3 bg-gray-900 rounded border border-gray-700 text-left">
                    <p class="text-gray-400 text-sm font-mono">{{ details }}</p>
                </div>
                {% endif %}
            </div>
            
            <div class="flex justify-center space-x-4">
                <a href={{ path('app_file_system_browser', { 'path': returnPath }) }} class="flex items-center gap-1 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded px-4 py-2 transition-all duration-150">
                    <i class="fa fa-arrow-left"></i>
                    Back to Directory
                </a>
                
                {% if actionPath %}
                <a href={{ actionPath }} class="flex items-center gap-1 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded px-4 py-2 transition-all duration-150">
                    <i class="fa fa-{{ actionIcon|default('refresh') }}"></i>
                    {{ actionText|default('Try Again') }}
                </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
