{% extends "common/layout.twig" %}

{# ABOUT INFO COMPONENT #}
{% block component %}
<div class="flex justify-center sm:items-center component">
    <div class="w-full max-w-2xl mx-auto">
        <div class="backdrop-blur-md bg-neutral-400/5 sm:border border-white/10 sm:rounded shadow-xl text-white w-full max-w-2xl mx-auto overflow-hidden flex flex-col items-center p-10">
            <div class="mb-6">
                <img src="/assets/images/pwa-icon.webp" alt="Admin Suite Icon" class="w-20 h-20 rounded-full shadow border-2 border-zinc-700 bg-zinc-800 p-2">
            </div>
            <h1 class="text-4xl sm:text-5xl font-extrabold text-zinc-100 mb-4">
                Admin Suite
            </h1>
            <p class="text-zinc-300 text-lg sm:text-xl mb-6 font-medium text-center">
                Simple & user-friendly solution for monitoring and managing Linux servers, primarily designed for single server instances debian-based systems.
            </p>

            {# LINKS #}
            <div class="flex flex-wrap gap-4 justify-center mb-4">
                <a href={{ projectGithubUrl|e }} target="_blank"
                   class="inline-flex items-center gap-2 px-5 py-2 rounded-full bg-zinc-800 text-zinc-100 font-semibold shadow hover:bg-zinc-700 transition-all duration-200 border border-zinc-700">
                    <i class="fab fa-github text-2xl"></i>
                    <span>GitHub</span>
                </a>
                <a href={{ authorWebsiteUrl|e }} target="_blank" rel="noopener"
                   class="inline-flex items-center gap-2 px-5 py-2 rounded-full bg-zinc-800 text-zinc-100 font-semibold shadow hover:bg-zinc-700 transition-all duration-200 border border-zinc-700">
                    <i class="fas fa-user-circle text-2xl"></i>
                    <span>Author</span>
                </a>
            </div>
            <div class="flex justify-center mb-2">
                <a href="mailto:{{ adminContactEmail|e }}">
                    <span class="inline-block px-6 py-2 rounded-full bg-zinc-800 border border-blue-300 text-blue-300 font-bold text-sm tracking-wider shadow backdrop-blur hover:bg-zinc-700 transition-all duration-200">
                        {{ adminContactEmail|e }}
                    </span>
                </a>
            </div>
            <div class="flex justify-center mb-2">
                <a href="{{ projectGithubUrl|e }}/blob/main/LICENSE">
                    <span class="inline-block px-6 py-2 rounded-full bg-zinc-800 border border-blue-300 text-blue-300 font-bold text-sm tracking-wider shadow backdrop-blur hover:bg-zinc-700 transition-all duration-200">
                        MIT LICENSE
                    </span>
                </a>
            </div>

            <div class="mt-4 text-zinc-500 text-xs text-center">&copy; {{ "now"|date("Y") }} Admin Suite. All rights reserved.</div>
        </div>
    </div>
</div>
{% endblock %}
