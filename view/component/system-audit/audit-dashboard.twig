{% extends 'common/layout.twig' %}

{# SYSTEM AUDIT COMPONENT VIEW #}
{% block component %}
<div class="flex flex-col h-full">
{# SUB-NAVIGATION #}
<div class="flex-shrink-0 px-2 py-1 border-b border-gray-700/50 bg-gray-800/30">
    <div class="flex items-center justify-between gap-2">
        <div class="flex items-center gap-3">
            <a href={{ path('app_dashboard') }} class="w-8 h-8 bg-gray-700/50 hover:bg-gray-600/50 rounded-lg flex items-center justify-center transition-all duration-200 border border-gray-600/30" title="Back to dashboard">
                <i class="fas fa-arrow-left text-gray-300 text-xs"></i>
            </a>
            <div class="hidden sm:block">
                <h1 class="text-xm font-bold text-white">System Audit</h1>
                <p class="text-gray-400 text-xs">System security and audit information</p>
            </div>
        </div>

        <div class="flex items-center gap-1">
            <a href={{ path('app_metrics_dashboard') }} class="w-8 h-8 bg-green-500/20 hover:bg-green-500/30 rounded-lg flex items-center justify-center transition-all duration-200 border border-green-500/30" title="Go to metrics dashboard">
                <i class="fas fa-chart-line text-green-400 text-xs"></i>
            </a>
            <a href={{ path('app_diagnostic') }} class="w-8 h-8 bg-blue-500/20 hover:bg-blue-500/30 rounded-lg flex items-center justify-center transition-all duration-200 border border-blue-500/30" title="Go to diagnostics">
                <i class="fas fa-check text-blue-400 text-xs"></i>
            </a>
        </div>
    </div>
</div>

{# MAIN CONTENT AREA #}
<div class="flex-1 flex flex-col min-h-0">
    <div class="w-full dashbard-component p-2 component">
        {# SYSTEM INFO CARDS (INCLUDED FROM DASHBOARD) #}
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 mb-2">
            {% include "component/dashboard/card/system-info-card.twig" %}
            {% include "component/dashboard/card/process-list-card.twig" %}
            {% include "component/system-audit/card/ufw-open-ports-card.twig" %}
            {% include "component/system-audit/card/linux-users-list-card.twig" %}
        </div>

        {# SSH ACCESS HISTORY CARD #}
        <div class="mb-2">
            {% include 'component/system-audit/card/ssh-access-history.twig' %}
        </div>

        {# SYSTEM JOURNALCTL LOGS CARD #}
        <div class="mb-2">
            {% include 'component/system-audit/card/system-journalctl-log-card.twig' %}
        </div>

        {# SYSTEM LOGS CARD #}
        <div class="mb-2">
            {% include 'component/system-audit/card/system-logs-card.twig' %}
        </div>

        {# SYSTEM DIAGNOSTICS CARD #}
        <div class="mb-2">
            {% include "component/diagnostic/card/system-diagnostics.twig" %}
        </div>
    </div>
</div>
</div>
{% endblock %}
