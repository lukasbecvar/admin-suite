<div class="backdrop-blur-md bg-gray-800/50 border border-gray-700/50 rounded-lg shadow-xl text-white w-full overflow-hidden">
    <div class="px-4 py-3 border-b border-gray-700/50 bg-gray-800/30">
        <h3 class="text-sm font-semibold text-white flex items-center">
            <i class="fas fa-file-alt text-red-400 mr-2"></i>
            System Logs
        </h3>
    </div>
    <div class="overflow-y-auto max-h-[320px] custom-scrollbar p-3">
        <div class="space-y-2">
            {% for logFile in logFiles %}
                <a href={{ path('app_file_system_view', { path: logFile.path, referer: 'app_system_audit' }) }} class="block p-3 bg-gray-700/30 hover:bg-gray-700/50 rounded-lg transition-colors duration-200 text-white">
                    <div class="flex items-center">
                        <i class="fas fa-file-alt text-gray-400 mr-2"></i>
                        <span class="font-medium">{{ logFile.name }}</span>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</div>
