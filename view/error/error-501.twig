{% extends 'common/base.twig' %}

{% block body %}
<div class="flex flex-col justify-center items-center h-screen bg-gradient-to-b from-zinc-900/100 to-zinc-950/100 text-gray-200">
    <div class="text-center animate-fade-in">
        <div class="text-yellow-400 text-6xl mb-4">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h2 class="text-4xl font-bold mb-2">Server Error</h2>
        <p class="text-lg text-gray-400 mb-6 max-w-xl mx-auto">
            This application is designed to run exclusively on a Linux-based server environment.
        </p>
        <div class="text-sm text-gray-500 mb-6">
            <p>If you're seeing this, please make sure your server is using a supported operating system.</p>
        </div>
        <a href={{ path('app_index') }} class="inline-block px-6 py-3 bg-blue-700 text-white text-lg font-semibold rounded-full shadow-lg hover:bg-blue-600 transition duration-300">
            Go to Homepage
        </a>
    </div>
</div>
{% endblock %}
