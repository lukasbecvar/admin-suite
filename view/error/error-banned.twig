{% extends 'common/base.twig' %}

{% block body %}
<div class="flex flex-col justify-center items-center h-screen bg-gradient-to-b from-zinc-900/100 to-zinc-950/100 text-gray-200">
    <div class="text-center max-w-xl animate-fade-in">
        <div class="text-red-500 text-6xl mb-4">
            <i class="fas fa-ban"></i>
        </div>
        <h1 class="text-5xl font-extrabold mb-4">Access Denied</h1>
        <p class="text-xl mb-6">
            {% if reason is defined and reason != 'no-reason' %}
                You have been banned from accessing this service.<br/>
                <span class="text-red-400 font-semibold">Reason:</span> <span class="text-red-300 font-semibold">{{ reason|e }}</span>
            {% else %}
                You have been banned from accessing this service.
            {% endif %}
        </p>
        <p class="text-lg text-gray-400 mb-6">
            If you believe this is a mistake or would like to appeal, please contact the administrator:
            <a href="mailto:{{ admin_contact|e }}" class="text-yellow-400 underline hover:text-yellow-300 transition duration-300">{{ admin_contact|e }}</a>
        </p>
        <a href={{ path('app_index') }} class="inline-block mt-2 px-6 py-3 bg-red-700 text-white text-lg font-semibold rounded-full shadow-lg hover:bg-red-600 transition duration-300">
            Return to Homepage
        </a>
    </div>
</div>
{% endblock %}
