<aside id="sidebar" class="text-white md:active border-r border-gray-600 flex flex-col justify-between h-full">
    <div>
        {# USER INFO #}
        <div class="flex flex-col items-center mb-2">
            {# PROFILE IMAGE #}
            <div class="profile-image mt-2">
                {% if userData.getProfilePic == 'default_pic' %}
                    <img class="rounded-md" src={{ asset('/build/images/default-profile.jpg') }} alt="profile picture">
                {% else %}
                    <img class="rounded-md" src="data:image/jpeg;base64,{{ userData.getProfilePic|e }}" alt="profile picture">
                {% endif %}
            </div>
            {# USERNAME #} 
            <div class="username font-bold text-xl">{{ userData.username|e }}</div>

            {# USER ROLE #}
            <div class="role text-base">
                {% if isAdmin %}
                    <span class="text-red-400">{{ userData.role|lower|e }}</span>
                {% else %}
                    <span class="text-green-500">{{ userData.role|lower|e }}</span>
                {% endif %}
            </div>
        </div>

        {# MENU LINKS #}
        <ul class="py-0 text-base">
            {# BECVAR-SITE LINK #}
            {% set current_url = app.request.getSchemeAndHttpHost() %}
            {% if current_url matches '/admin/' %}
                {% set new_url = current_url|replace({'admin.': ''}) %}
                <li>
                    <a href="{{ new_url }}/admin" class="flex items-center border-b border-gray-600 block px-3"> 
                        <i class="fas fa-globe mrc-2 ml-05"></i>&nbsp;
                        <span>Main site</span>
                    </a>
                </li>
            {% endif %}

            {# DASHBOARD LINK #}
            <li>
                <a href={{ path('app_dashboard') }} class="flex items-center border-b border-gray-600 block px-3">
                    <i class="fas fa-desktop mr-1.5"></i>&nbsp;
                    <span>Dashboard</span>
                </a>
            </li>
            
            {# LOGS-MANAGER LINK #}
            <li>
                <a href={{ path('app_manager_logs') }} class="flex items-center border-b border-gray-600 block px-3">
                    <i class="fas fa-list mr-2"></i>&nbsp;
                    <span>Logs</span>
                </a>
            </li>

            {# DATABASE-MANAGER LINK #}
            <li>
                <a href={{ path('app_manager_database') }} class="flex items-center border-b border-gray-600 block px-3">
                    <i class="fas fa-database mrc-3"></i>&nbsp;
                    <span>Database</span>
                </a>
            </li>

            {# MONITORING-MANAGER LINK #}
            <li>
                <a href={{ path('app_manager_monitoring') }} class="flex items-center border-b border-gray-600 block px-3">
                    <i class="fa fa-briefcase-medical mr-2"></i>&nbsp;
                    <span>Monitoring</span>
                </a>
            </li>

            {# DIAGNOSTICS LINK #}
            <li>
                <a href={{ path('app_diagnostic') }} class="flex items-center border-b border-gray-600 block px-3">
                    <i class="fas fa-check-double mr-2"></i>&nbsp;
                    <span>Diagnostics</span>
                </a>
            </li>

            {# TODO-MANAGER LINK #}
            <li>
                <a href={{ path('app_todo_manager') }} class="flex items-center border-b border-gray-600 block px-3">
                    <i class="fas fa-tasks mr-2"></i>&nbsp;
                    <span>Todos</span>
                </a>
            </li>

            {# USERS-MANAGER LINK #}
            <li>
                <a href={{ path('app_manager_users') }} class="flex items-center border-b border-gray-600 block px-3">
                    <i class="fas fa-users mr-1"></i>&nbsp;
                    <span>Users</span>
                </a>
            </li>

            {# ACCOUNT-SETTINGS LINK #}
            <li>
                <a href={{ path('app_account_settings_table') }} class="flex items-center border-b border-gray-600 block px-3">
                    <i class="fas fa-user-cog mr-1"></i>&nbsp;
                    <span>Account settings</span>
                </a>
            </li>
        </ul>
    </div>
</aside>
