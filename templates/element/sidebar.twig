<aside id="sidebar" class="text-white md:active border-r border-gray-600 flex flex-col justify-between h-full">
    <div>
        {# USER INFO #}
        <div class="flex flex-col items-center mb-2">
            {# PROFILE IMAGE #}
            <div class="profile-image mt-2">
                {% if userData.getProfilePic == 'default_pic' %}
                    <img class="rounded-md" src={{ asset('/build/images/default-profile.jpg') }} alt="profile picture">
                {% else %}
                    <img class="rounded-md" src="data:image/jpeg;base64,{{ userData.getProfilePic|e }}" alt="profile picture">
                {% endif %}
            </div>
            {# USERNAME #} 
            <div class="username font-bold text-xl">{{ userData.username|e }}</div>

            {# USER ROLE #}
            <div class="role text-base">
                {% if isAdmin %}
                    <span class="text-red-400">{{ userData.role|lower|e }}</span>
                {% else %}
                    <span class="text-green-500">{{ userData.role|lower|e }}</span>
                {% endif %}
            </div>
        </div>

        {# MENU LINKS #}
        <ul class="py-0 text-base">
            {# DASHBOARD LINK #}
            <li>
                <a href={{ path('app_dashboard') }} class="border-b border-gray-600 block px-3 py-1 hover:bg-gray-800">
                    <i class="fas fa-desktop mr-2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            
            {# LOGS-MANAGER LINK #}
            <li>
                <a href={{ path('app_manager_logs') }} class="border-b border-gray-600 block px-3 py-1 hover:bg-gray-800">
                    <i class="fas fa-list ml-0.5 mr-2"></i>
                    <span>Logs manager</span>
                </a>
            </li>

            {# USERS-MANAGER LINK #}
            <li>
                <a href={{ path('app_manager_users') }} class="border-b border-gray-600 block px-3 py-1 hover:bg-gray-800">
                    <i class="fas fa-users mr-2"></i>
                    <span>Users manager</span>
                </a>
            </li>

            {# ACCOUNT-SETTINGS LINK #}
            <li>
                <a href={{ path('app_account_settings_table') }} class="border-b border-gray-600 block px-3 py-1 hover:bg-gray-800">
                    <i class="fas fa-user-cog mr-2"></i>
                    <span>Account settings</span>
                </a>
            </li>
        </ul>
    </div>
</aside>
