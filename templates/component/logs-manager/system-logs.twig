{% extends 'common/layout.twig' %}

{# SYSTEM LOGS TABLE #}
{% block component %}
    <div class="bg-dark rounded-lg shadow-lg p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {% if logContent == 'non-selected' %}
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">Log Files</h3>
                    <ul class="divide-y divide-gray-200">
                        {% for logFile in logFiles %}
                            <li class="py-2">
                                <a href="{{ path('app_manager_logs_system', { file: logFile }) }}" class="block hover:text-blue-600">{{ logFile }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% else %}
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">Log Content</h3>
                    <div class="bg-gray-100 p-4 rounded-lg">
                        {% if logContent == null %}
                            <p class="text-gray-600">Select a log file to view its content.</p>
                        {% else %}
                            <pre class="whitespace-pre-wrap">{{ logContent }}</pre>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
