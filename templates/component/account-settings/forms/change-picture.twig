{% extends 'common/layout.twig' %}

{# ACCOUNT SETTING CHANGE PICTURE #}
{% block component %}
<div class="bg-neutral-900 border-b border-neutral-700 sub-navigation text-white">
    <a href={{ path('app_account_settings_table') }} class="border border-neutral-500 font-bold px-1">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <span class="mr-1">Picture settings</span>
</div>

{# PICTURE CHANGE FORM #}
<div class="flex justify-center items-center mt-10 mb-10">
    <div class="text-white max-w-md w-full bg-neutral-800 shadow-md px-4 py-4 mb-1 border border-gray-600 m-w-95">
        <h2 class="text-2xl mb-4 text-center text-white">Change picture</h2>
    
        {# SUCCESS MESSAGE RETURN BOX #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-700 text-white p-3 mb-3 rounded text-center">{{ message|e }}</div>
        {% endfor %}
    
        {# ERROR MESSAGE RETURN BOX #}
        {% for message in app.flashes('error') %}
            <div class="bg-red-700 text-white p-3 mb-3 rounded text-center">{{ message|e }}</div>
        {% endfor %}

        {# IMAGE PREVIEW BOX #}
        <div class="image-preview mb-4 flex justify-center">
            <div class="relative rounded-lg overflow-hidden border-2 border-gray-600 shadow-lg" style="display: none;" id="image-preview-container">
                <img id="preview-image" src="#" alt="Image preview" class="w-40 h-40 object-cover">
            </div>
        </div>
    
        {# PICTURE CHANGE FORM #}
        {{ form_start(profilePicChangeForm) }}
    
            {# FORM FIELDS #}
            <div class="mb-4">
                {{ form_label(profilePicChangeForm['profile-pic'], 'Choose Picture', {'label_attr': {'class': 'block text-sm font-bold mb-2'}}) }}
                {{ form_row(profilePicChangeForm['profile-pic'], {'attr': {'class': 'block w-full px-3 py-2 mt-1 bg-neutral-800 text-white border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500', 'accept': 'image/*', 'onchange': 'previewImage(this)'}}) }}
            </div>

            {# FORM SUBMIT BUTTON #}
            <button type="submit" class="mt-2 mb-2 bg-blue-600 hover:bg-blue-700 text-white hover:text-gray-200 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">Change</button>
        {{ form_end(profilePicChangeForm) }}
    </div>
</div>

{# IMAGE PREVIEW SHOW FUNCTION #}
<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('preview-image').setAttribute('src', e.target.result);
                document.getElementById('image-preview-container').style.display = 'block';
            }
            reader.readAsDataURL(input.files[0]);
        } else {
            document.getElementById('image-preview-container').style.display = 'none';
        }
    }
</script>
{% endblock %}
