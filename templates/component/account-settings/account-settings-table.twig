{% extends 'common/layout.twig' %}

{% block component %}

<div class="w-full account-settings">
    <div class="p-6 account-setting-table">
        <h2 class="text-2xl font-semibold mb-6 text-white text-center">Account Settings</h2>
        <div class="space-y-6">
            {# PROFILE PICTURE SETTINGS COMPONENT #}
            <div class="bg-neutral-900 p-4 rounded-md flex items-center justify-between border border-gray-700 hover:shadow-lg transition-shadow duration-300">
                <div class="flex items-center space-x-4 w-1/3">
                    <div class="text-sm font-medium text-gray-200">Profile Image</div>
                </div>
                <div class="flex items-center justify-center flex-1">
                    {% if userData.getProfilePic == 'default_pic' %}
                        <img class="rounded-full h-10 w-10 object-cover" src={{ asset('/build/images/default-profile.jpg') }} alt="profile picture">
                    {% else %}
                        <img class="rounded-full h-10 w-10 object-cover" src="data:image/jpeg;base64,{{ userData.getProfilePic|e }}" alt="profile picture">
                    {% endif %}
                </div>
                <div class="w-1/3 text-right">
                    <a href="/account/settings/change/picture" class="font-bold text-indigo-400 hover:text-indigo-300 flex items-center justify-end space-x-1">
                        <i class="fas fa-edit"></i>
                        <span class="hidden md:inline">Change</span>
                    </a>
                </div>
            </div>

            {# USERNAME SETTINGS COMPONENT #}
            <div class="bg-neutral-900 p-4 rounded-md flex items-center justify-between border border-gray-700 hover:shadow-lg transition-shadow duration-300">
                <div class="flex items-center space-x-4 w-1/3">
                    <div class="text-sm font-medium text-gray-200">Username</div>
                </div>
                <div class="flex items-center justify-center flex-1 text-sm text-gray-400">
                    {{ userData.username|e }}
                </div>
                <div class="w-1/3 text-right">
                    <a href="/account/settings/change/username" class="font-bold text-indigo-400 hover:text-indigo-300 flex items-center justify-end space-x-1">
                        <i class="fas fa-edit"></i>
                        <span class="hidden md:inline">Change</span>
                    </a>
                </div>
            </div>

            {# PASSWORD SETTINGS COMPONENT #}
            <div class="bg-neutral-900 p-4 rounded-md flex items-center justify-between border border-gray-700 hover:shadow-lg transition-shadow duration-300">
                <div class="flex items-center space-x-4 w-1/3">
                    <div class="text-sm font-medium text-gray-200">Password</div>
                </div>
                <div class="flex items-center justify-center flex-1 text-sm text-gray-400">
                    *********
                </div>
                <div class="w-1/3 text-right">
                    <a href="/account/settings/change/password" class="font-bold text-indigo-400 hover:text-indigo-300 flex items-center justify-end space-x-1">
                        <i class="fas fa-edit"></i>
                        <span class="hidden md:inline">Change</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
